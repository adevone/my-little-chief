<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/basketItemView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="BasketItemView"
        android:textSize="32dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/basketCountView"
        android:maxLines="3"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="16dp" />

    <TextView
        android:id="@+id/basketCountView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BCV"
        android:textSize="32dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/basketItemView"
        app:layout_constraintBottom_toBottomOf="@+id/basketItemView"
        android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>